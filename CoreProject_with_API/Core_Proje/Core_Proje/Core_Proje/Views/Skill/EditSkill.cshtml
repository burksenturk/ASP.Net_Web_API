@model EntityLayer.Concrete.Skill

@{
    ViewData["Title"] = "EditSkill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Yetenek Güncelleme Sayfası</h3>
</div>

@using (Html.BeginForm("EditSkill", "Skill", FormMethod.Post))
{
    @Html.HiddenFor(x=>x.SkillID)
    <br />
    @Html.Label("Yetenek Başlığı")
    @Html.TextAreaFor(x => x.Title,new{@class="form-control"})
    @Html.ValidationMessageFor(x=>x.Title,"",new{@style="color:red"})

    <br />
    @Html.Label("Değer")
    @Html.TextAreaFor(x => x.Value,new{@class="form-control"})
    @Html.ValidationMessageFor(x=>x.Value,"",new{@style="color:red"})

    <br />
    <button class="btn btn-success">Güncelle</button>



}
