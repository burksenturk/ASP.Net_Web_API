@{
    ViewBag.Title = "InvitationForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>InvitationForm</h2>

<div class="panel panel-success">
    <div class="panel-heading"><h4>Sen de davetlisin</h4></div>
    <div class="panel-body">


        <div class="form-group">
            <label>Ad</label>
            <input type="text" name="Ad" id="Ad" class="form-control" />
        </div>
        <div class="form-group">
            <label>Eposta</label>
            <input type="text" name="Email" id="Email" class="form-control" />

        </div>
        <div class="form-group">
            <label>Katılacak mısın ?</label>
            <select name="KatilmaDurumu" class="form-control">
                <option>Partiye Katılacak Mısın ?</option>
                <option value="true">Evet, Geliyorum</option>
                <option value="false">Hayır, Gelmiyorum</option>
            </select>

        </div>
        <div class="text-center">
            <input class="btn btn-success" type="submit" value="Gönder" />
        </div>


    </div>
</div>
